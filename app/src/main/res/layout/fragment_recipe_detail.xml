<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipe_name_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Recipe Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recipe_ingredients_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredients go here"
        app:layout_constraintTop_toBottomOf="@id/recipe_name_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/recipe_steps_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Steps go here"
        app:layout_constraintTop_toBottomOf="@id/recipe_ingredients_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
